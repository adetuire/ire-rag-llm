{
    "name": "ire-rag-llm (Python 3.11)",
    "image": "python:3.11-slim",                                // base Docker image

    "postCreateCommand" : "pip install --upgrade pip",          // PostCreate runs installs Python deps

    "forwardPorts": [8000],                                     // Forward port 8000 from container to host(FastAPI/vLLM default)

    "customizations": {                                         // prompt suggestful code extensions to install
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers"
            ]
        }
    }
}