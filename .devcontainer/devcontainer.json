{
    "name": "ire-rag-llm (Python 3.11)",
    "image": "python:3.11-slim",                                // base Docker image

                                                                // PostCreate runs installs Python deps
    "postCreateCommand" : "apt-get update && apt-get install -y git && pip install --upgrade pip",                                                                 

    "forwardPorts": [8000],                                     // Forward port 8000 from container to host(FastAPI/vLLM default)

    "customizations": {                                         // prompt suggestful code extensions to install
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers"
            ]
        }
    }
}